<HTML>
<HEAD>
<TITLE>学生列表</TITLE>
<META content="text/html; charset=utf-8" http-equiv="Content-Type">
<script src="js/jquery-1.9.1.js"></script>
<script src="js/search.js"></script>
<script>
	$.post("StuServlet", {
		type : 'classes'
	}, function(msg) {

		var did = $(":input[name='dis_id']").val().trim();
		for ( var i = 0; i < msg.length; i++) {
			var ms = msg[i];
			$("#district_id").append(
					"<option value=" + ms.id + ">" + ms.name + "</option>);");
		}
		$("#district_id").val(did);
		
		});
</script>
  </head>
  <body>
  <h2>修改学生页面</h2>
    <form method="post" action="StuServlet?type=add">
    	学生编号：<input type="text" name="stuId" value="${msg.stuId }"/>
    	学生名称：<input type="text" name="stuName" value="${msg.stuName }"/>
    	学生年龄：<input type="text" name="age" value="${msg.age }"/>
    	所属班级：<select name="clsId" value="${msg.classes.clsId }">
    	
    	</select>
    	<input type="submit" value="更新"/>
    </form>
  </body>
</html>
