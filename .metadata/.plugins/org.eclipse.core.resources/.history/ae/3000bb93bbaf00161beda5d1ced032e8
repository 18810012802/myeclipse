<script type="text/javascript">
	 $(function () {
		$('#newNav').click(function(){
				window.location.href="add.html";
		 });
    });
	
    	function checkall(){
			var alls=document.getElementsByName("check");
			var ch=document.getElementById("checkall");
			if(ch.checked){
				for(var i=0;i<alls.length;i++){
					alls[i].checked=true;	
				}	
			}else{
				for(var i=0;i<alls.length;i++){
					alls[i].checked=false;	
				}	
			}
		}
		function delAll(){
			var alls=document.getElementsByName("check");
			var ids=new Array();
			var eids="-1";
			for(var i=0;i<alls.length;i++){
				if(alls[i].checked){
					ids.push(alls[i].value);
					eids+=","+alls[i].value;
					alert(eids);
				}		
			}
			if(ids.length>0){
				if(confirm("确认操作?")){
					alert(eids);
					window.location.href="DeleteEmailById?eids="+eids;
					alert("成功!");
				}
			}else{
				alert("请选中要操作的项");
			}
		}
		function exportsed(){
			window.location.href="ExcelSendEmailServlet";
		}
    </script>
